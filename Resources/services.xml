<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Plugin -->
        <service id="blauband_one_click_system.config_service"
                 class="BlaubandOneClickSystem\Services\ConfigService">
            <argument>%blauband_one_click_system.plugin_dir%/Resources/compare.xml</argument>
        </service>

        <service id="blauband_one_click_system.file_config_service"
                 class="BlaubandOneClickSystem\Services\ConfigService">
            <argument>%blauband_one_click_system.plugin_dir%/Resources/files.xml</argument>
        </service>

        <service id="blauband_one_click_system.subscriber.cron_job" class="BlaubandOneClickSystem\Subscriber\CronJob">
            <argument type="service" id="service_container"/>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="blauband_one_click_system.system_validation"
                 class="BlaubandOneClickSystem\Services\System\Local\SystemValidation">
            <argument type="service" id="snippets"/>
            <argument type="service" id="models"/>
        </service>

        <!-- common -->
        <service id="blauband_one_click_system.amazon_rds_service"
                 class="BlaubandOneClickSystem\Services\System\Common\AmazonRDSService"
                 public="false">
            <argument type="service" id="snippets"/>
            <argument type="service" id="blauband_one_click_system.db_connection_service"/>
        </service>

        <service id="blauband_one_click_system.db_connection_service"
                 class="BlaubandOneClickSystem\Services\System\Common\DBConnectionService">
            <argument type="service" id="snippets"/>
        </service>

        <!-- local -->
        <service id="blauband_one_click_system.mail_service"
                 class="BlaubandOneClickSystem\Services\System\Local\MailService"
                 public="false">
            <argument type="service" id="snippets"/>
        </service>

        <service id="blauband_one_click_system.ht_access_service"
                 class="BlaubandOneClickSystem\Services\System\Local\HtAccessService"
                 public="false">
            <argument type="service" id="snippets"/>
        </service>

        <service id="blauband_one_click_system.set_up_system_service"
                 class="BlaubandOneClickSystem\Services\System\Local\SetUpSystemService">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="snippets"/>
        </service>

        <service id="blauband_one_click_system.db_duplication_service"
                 class="BlaubandOneClickSystem\Services\System\Common\DBDuplicationService">
            <argument type="service" id="snippets"/>
        </service>

        <service id="blauband_one_click_system.codebase_duplication_service"
                 class="BlaubandOneClickSystem\Services\System\Common\CodebaseDuplicationService">
            <argument type="service" id="snippets"/>
            <argument type="service" id="blauband_one_click_system.file_config_service"/>
        </service>

        <service id="blauband_one_click_system.local_system_service"
                 class="BlaubandOneClickSystem\Services\System\Local">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="blauband_one_click_system.db_connection_service"/>
            <argument type="service" id="models"/>
            <argument type="service" id="blauband_one_click_system.system_validation"/>
            <argument type="service" id="blauband_one_click_system.db_duplication_service"/>
            <argument type="service" id="blauband_one_click_system.codebase_duplication_service"/>
            <argument type="service" id="blauband_one_click_system.set_up_system_service"/>
            <argument type="service" id="blauband_one_click_system.ht_access_service"/>
            <argument type="service" id="blauband_one_click_system.mail_service"/>
            <argument type="service" id="blauband_one_click_system.amazon_rds_service"/>
            <argument>%kernel.root_dir%</argument>
        </service>


        <!-- compare db -->
        <service id="blauband_one_click_system.db_compare_service"
                 class="BlaubandOneClickSystem\Services\DBCompare\DBCompareService">
        </service>

        <!-- compare folder -->
        <service id="blauband_one_click_system.folder_compare_service"
                 class="BlaubandOneClickSystem\Services\FolderCompare\FolderCompareService">
            <argument type="service" id="snippets"/>
            <argument type="service" id="blauband_one_click_system.file_config_service"/>
        </service>
    </services>
</container>